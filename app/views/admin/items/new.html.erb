<h1>商品新規登録</h1>


    <%= form_with model: @items, url: admin_items_path, method: :POST do |f| %>
  <h4>商品名</h4>
    <%= f.text_field :name %>
  <h4>商品説明</h4>
    <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
    <%= f.label :genre_id %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <h4>税抜価格</h4>
    <%= f.text_area :price %>
  <h4>販売ステータス</h4>
    <%= f.select :is_active, Item.is_actives.keys.map{|k| [I18n.t("enums.item.is_active.#{k}"), k]}%>

  <%= f.submit '新規登録' %>
<% end %>


