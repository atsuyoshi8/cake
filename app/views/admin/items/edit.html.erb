<h1>商品編集</h1>


<%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
<div class="form-group">
 <%= f.label :name, "商品名" %>
  <br><%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :introduction, "商品説明" %>
  <br><%= f.text_area :introduction %>
</div>
<div class="form-group">
  <%= f.label :genre_id, "ジャンル" %>
  <br><%= f.text_area :genre_id %>
</div>
<div class="form-group">
  <%= f.label :price, "税抜価格" %>
  <br><%= f.text_area :price %>
</div>
<div class="form-group">
  <%= f.label :is_active, "販売ステータス" %>
  <br><%= f.text_area :is_active %>
</div>
  <%= f.submit '変更を保存' %>
<% end %>