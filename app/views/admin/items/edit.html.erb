<h1>商品編集</h1>


<%= form_with model: @items, url: admin_items_path, method: :PATCH do |f| %>
<div class="form-group">
  <label for="book_title">商品名</label>
  <br><%= f.text_field :name %>
</div>
<div class="form-group">
  <label for="book_body">商品説明</label>
  <br><%= f.text_area :introduction %>
</div>
<div class="form-group">
  <label for="book_body">ジャンル</label>
  <br><%= f.text_area :genre_id %>
</div>
<div class="form-group">
  <label for="book_body">税抜価格</label>
  <br><%= f.text_area :price %>
</div>
<div class="form-group">
  <label for="book_body">販売ステータス</label>
  <br><%= f.text_area :is_active %>
</div>
  <%= f.submit '変更を保存' %>
<% end %>