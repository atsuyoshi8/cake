<div class="col-md-8 offset-md-1">
  		<h2>商品詳細</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
  		      <td>
  		        <% if @item.image.attached? %>
              <%= image_tag @item.image, size: "300x300" %>
              <% else %>
              <%= image_tag 'no_image', size: "300x300" %>
              <% end %>
  		      </td>
  		      <td>
  		         <%= @item.name %>
  		      </td>
  		      <td>
  		         <%= @item.introduction %>
  		      </td>
  		      <td>
  		         <%= @item.genre_id %>
  		      </td>
  		      <td>
  		         <%= @item.price %>
              </td>
              <td>
  		         <%= @item.is_active %>
              </td>

  		    </tr>
  		    <td>
                 <%= link_to "編集する", edit_admin_item_path(@item) %>
            </td>
        </tbody>
      </table>
</div>