<h1>会員情報編集</h1>


<%= form_with model: @customer, url: admin_customer_path, method: :PATCH do |f| %>
<div class="form-group">
  <label for="customer_id">会員ID</label>
  <br><%= @customer.id %>
<div class="form-group">
  <label for="customer_last_name">氏名</label>
  <br><%= f.text_area :last_name %>
</div>
<div class="form-group">
  <label for="customer_last_name_kana">フリガナ</label>
  <br><%= f.text_area :last_name_kana %>
</div>
<div class="form-group">
  <label for="customer_postal_code">郵便番号</label>
  <br><%= f.text_area :postal_code %>
</div>
<div class="form-group">
  <label for="customer_address">住所</label>
  <br><%= f.text_area :address %>
</div>
<div class="form-group">
  <label for="customer_telephone_number">電話番号</label>
  <br><%= f.text_area :telephone_number %>
</div>
<div class="form-group">
  <label for="customer_email">メールアドレス</label>
  <br><%= f.text_area :email %>
</div>
<div class="form-group">
  <label for="customer_is_deleted">会員ステータス</label>
  <br><%= f.text_area :is_deleted %>
</div>
  <%= f.submit '変更を保存' %>
<% end %>