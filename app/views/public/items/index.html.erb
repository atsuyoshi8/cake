<div class="col-md-8 offset-md-1">
    <h2 class="mt-3">商品一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
       <tr>
          <th></th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
       </thead>
      <tbody>
           <% @items.each do |item| %>
         <tr>
          <td></td>
          <td><%= link_to item.name,item_path(item.id) %></td>
          <td><%= item.price %></td>
          <td></td>
         </tr>
           <% end %>
      </tbody>
     </table>
</div>