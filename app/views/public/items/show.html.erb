<div class="col-md-8 offset-md-1">
  		<h2>商品詳細</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
  		      <td>
  		        <% if @item.image.attached? %>
              <%= image_tag @item.image, size: "300x300" %>
              <% else %>
              <%= image_tag 'no_image', size: "300x300" %>
              <% end %>
  		      </td>
  		      <td>
  		         <%= @item.name %>
  		      </td>
  		      <td>
  		         <%= @item.introduction %>
  		      </td>
  		      <td>
  		         <%= @item.price %>
            </td>
            <td>
               <%= form_with model: @cart_item ,url: cart_items_path do |f| %>
               <%= f.select :amount, *[1..3] %>
               <% end %>
            </td>

  		    </tr>
        </tbody>
      </table>
</div>