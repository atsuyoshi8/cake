<h1>配送先編集</h1>


<%= form_with model: @addresses do |f| %>
<div class="form-group">
  <label for="addresses_postal_code">郵便番号</label>
  <br><%= f.text_field :postal_code %>
</div>
<div class="form-group">
  <label for="addresses_address">住所</label>
  <br><%= f.text_area :address %>
</div>
<div class="form-group">
  <label for="addresses_name">宛名</label>
  <br><%= f.text_area :name %>
</div>
<div class="form-group">
  <%= f.submit '変更内容を保存' %>
<% end %>
</div>
</form>
</div>