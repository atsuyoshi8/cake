<h1>配送先登録/一覧</h1>


<%= form_with model: @address, url: '/addresses', method: :post do |f| %>
<div class="form-group">
  <label for="addresses_postal_code">郵便番号</label>
  <br><%= f.text_field :postal_code %>
</div>
<div class="form-group">
  <label for="addresses_address">住所</label>
  <br><%= f.text_area :address %>
</div>
<div class="form-group">
  <label for="addresses_name">宛名</label>
  <br><%= f.text_area :name %>
</div>
<div class="form-group">
  <%= f.submit 'Create Book' %>
<% end %>
</div>
</form>
</div>


<table border="1">
  <thead>
    <tr>
      <th>郵便番号</th><th>住所</th><th>宛名</th><th></th>
    </tr>
  </thead>
   <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address) %><%= link_to "削除する", address_path(address) ,method: :delete %></td>
     </tr>
    <% end %>
  </tbody>
</table>